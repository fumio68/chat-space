.main-chat__message-list__message{data: {message: {id: message.id}}}
  .main-chat__message-list__message__top-box
    %p.main-chat__message-list__message__top-box__user-name
      = message.user.name
    %p.main-chat__message-list__message__top-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?