.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__username
        = current_user.name
      %ul.side-bar__header__box__icons
        %li
          = link_to new_group_path, class:"side-header__box__new-group" do
            = icon('fas', 'edit', class: 'group-edit')
            %span<>
        %li
          = link_to edit_user_path(current_user), class: "side-header__box__edit-user" do
            = icon('fas', 'cog', class: 'edit-user')
            %span<>

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group), class:"side-bar__group-list__group__link" do
          %p.side-bar__group-list__group__group-name
            = group.name
          %p.side-bar__group-list__group__message
            = group.show_last_message
