.main-chat
  .main-chat__header
    .main-chat__header__left-box
      %h2.main-chat__header__left-box__current-group
        = @group.name
      %ul.main-chat__header__left-box__member-list
        Memberï¼š
        %li.main-chat__header__left-box__member
        - @group.users.each do |group|
          =group.name
    .main-chat__header__edit-btn
      = link_to edit_group_path(@group.id), class: "main-chat__header__edit-btn__text" do
        Edit

  .main-chat__message-list
    = render @messages

  .main-chat__form
    = form_for [@group, @message] do |f|
      .main-chat__form__box
        .main-chat__form__box__textarea
          =f.text_field :content, class:"main-chat__form__box__textarea__new-message", placeholder:"type a message"
        .main-chat__form__label
          = f.label :image, class: "main-chat__form__box__label__image" do
            = icon('fa', 'image',class: "main-chat__form__box__label__image__icon")
            = f.file_field :image, class: "main-chat__form__box__label__image__file"
        =f.submit "Send", class: "main-chat__form__box__submit-btn"

